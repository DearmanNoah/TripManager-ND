<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - M8_Project2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/M8_Project2.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-secondary p-4 mb-3 text-center text-white">
        <h1 class="fw-bold">My Trip Log</h1>
    </header>
    <subheader class="fw-bold text-center">
            @if (ViewBag.SubHeader == "Page1")
            {
                <h1>Add Trip Destination and Dates</h1>
            }
            @if (ViewBag.SubHeader == "Page2")
            {
                <h1>Add Info For @TempData.Peek("Accommodation")</h1>
            }
            @if (ViewBag.SubHeader == "Page3")
            {
                <h1>Add Things to Do in @TempData.Peek("Destination")</h1>
            }
            @if (ViewBag.SubHeader == "Added")
            {
                <h1>Trip to @TempData["Destination"] has been added.</h1>
            }
    </subheader>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
