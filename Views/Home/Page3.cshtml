@model Trip
@{
	string title = ViewBag.Action; ViewData["Title"] = title;
}
<form asp-action="Page" method="post" class="align-content-start">
	<div class="mb-3">
		<input asp-for="Activity1" class="form-control">
	</div>
	<div class="mb-3">
		<input asp-for="Activity2" class="form-control">
	</div>
	<div class="mb-3">
		<input asp-for="Activity3" class="form-control">
	</div>
	<button type="submit" asp-route-id="4" class="btn btn-dark text-white">Next</button>
	<a asp-controller="Home" asp-action="Cancel" class="btn border rounded btn-white">Cancel</a>
</form>