@model List<Trip>

@{
    ViewData["Title"] = "My Trip Log";
}

<a asp-controller="Home" asp-action="Page" asp-route-id="1" class="btn bg-white text-primary fw-bold">Add Trip</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate</td>
                <td>@trip.EndDate</td>
                <td>
                    @trip.Accommodation <br />
                    Phone: @trip.AccommodationPhone <br />
                    Email: @trip.AccommodationEmail
                </td>
                <td>
                    @trip.Activity1 <br />
                    @trip.Activity2 <br />
                    @trip.Activity3
                </td>
            </tr>
        }
    </tbody>
</table>